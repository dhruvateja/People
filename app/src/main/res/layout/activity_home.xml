<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    tools:context=".Home">

    <RelativeLayout
        android:id="@+id/custom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/theme_blue">
        <LinearLayout
            android:id="@+id/contacts_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_alignParentLeft="true"
            android:alpha="0.5">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_people_white_48dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/logo_color"
            android:textSize="@dimen/logo_size"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/me_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_alignParentRight="true"
            android:alpha="0.5">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mood_white_48dp"/>
        </LinearLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_action_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/section_header"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/section_header"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/section_header"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include><include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
            <include layout="@layout/list_card"></include>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/home_dialer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp">
        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:background="@drawable/circle_dialer_btn">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dialpad_white_48dp"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
